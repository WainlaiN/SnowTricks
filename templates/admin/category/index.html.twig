{% extends 'admin/index.html.twig' %}


{% block title %}Category index{% endblock %}

{% block body %}
    {% include 'admin/_admin_button.html.twig' %}

    <div class="container">

        <h1>Index des Categories</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.description }}</td>
                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-info">Voir</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info">Editer</a>
                        <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-info">Supprimer</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Pas de catégories</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_new') }}" class="btn btn-info">Créer une categorie</a>
    </div>
{% endblock %}
