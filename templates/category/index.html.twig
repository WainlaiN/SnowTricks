{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Index des Categories</h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.description }}</td>
                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-info">voir</a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info">editer</a>
                        <a href="{{ path('category_delete', {'id': category.id}) }}" class="btn btn-info">supprimer</a>

                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_new') }}">Create new</a>
    </div>
{% endblock %}
