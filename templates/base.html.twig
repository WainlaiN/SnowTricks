<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://bootswatch.com/4/superhero/bootstrap.min.css">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">SnowTricks</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02"
            aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor02">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="{{ path('trick') }}">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('trick_create') }}">Cr√©er un article</a>
            </li>


        </ul>
        <form class="form-inline my-2 my-lg-0">
            <ul class="navbar-nav mr-auto">
                {% if not app.user %}
                    <li class="nav-item">
                        <a href="{{ path('security_registration') }}" class="nav-link">S'enregistrer</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('security_login') }}" class="nav-link">Connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('security_logout') }}" class="nav-link">Deconnexion</a>
                    </li>
                {% endif %}

            </ul>

        </form>
    </div>
</nav>

{% for message in app.flashes('notice') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<div class="bg" id="bg"></div>

<div class="container">
    {% block body %}{% endblock %}
</div>

{% block javascripts %}
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }}

{% endblock %}

</body>
</html>
