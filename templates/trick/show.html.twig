{% extends'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('comment') }}
    {{ encore_entry_link_tags('slickcss') }}

{% endblock %}

{% block body %}
    <!-- Display main trick image -->
    {#<div class="container-fluid"><img height="10%" src="{{ UploadDirectory ~ trick.mainImage }}" alt="test"/></div>#}

    <div class="container">
        <div class="raw mt-5">
            <h2>Nom de la figure: <strong>{{ trick.name }}</strong></h2>
            <div class="metadata">Edité le <strong>{{ trick.createdAt | date('d/m/Y') }}</strong> à
                <strong>{{ trick.createdAt | date('H:i') }}</strong>
                dans
                la catégorie
                <strong>{{ trick.category.title }}</strong>
            </div>
            {% if app.user %}
                <div class="float-right">
                    <a href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i
                                class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('trick_delete', {'slug': trick.slug}) }}"
                       onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{ trick.name }} ?`)"><i
                                class="fas fa-trash-alt"></i></a>
                </div>
            {% endif %}
        </div>
        <br>

        <!-- trick description -->
        <div class="raw mt-3 mb-5">
            <h5>Description: {{ trick.description | raw }}</h5>
        </div>

        <!-- Display trick images -->

                {% for image in trick.images %}
                    <img class="carousel__photo" src="{{ UploadDirectory ~ image.imageFilename }}" alt="test"/>
                {% endfor %}


        <!-- Display trick videos -->
        <div class="single-item">
            {% for video in trick.videos %}
                <iframe width="30%" height="100%" src="{{ video.videoUrl }}" frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen></iframe>
            {% endfor %}

        </div>

        <!-- Include comment template -->
        {% include 'trick/_comment.html.twig' %}

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('slickjs') }}
    {{ encore_entry_script_tags('loadbutton') }}
    {{ encore_entry_script_tags('slider') }}

{% endblock %}

