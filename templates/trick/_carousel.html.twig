{% if trick.images|length > 0 and trick.videos|length > 0 %}
<div class="carousel" id="carousel">
    {% set count = 1 %}

    <div class="slider-outer">
        <img class="prev" src="{{ asset('uploads/home/arrow-left.png') }}" alt="prev">

        <div class="slider-inner">
            {% for image in trick.images %}
                <img src="{{ UploadDirectory ~ image.imageFilename }}" {% if count == 1 %} class="active"
                     {% endif %}alt="test"/>
                {% set count = count + 1 %}
            {% endfor %}

            {% for video in trick.videos %}
                <iframe width="100%" height="100%" src="{{ video.videoUrl }}" frameborder="0"
                        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen> {% if count == 1 %} class="active" {% endif %}</iframe>

                {% set count = count + 1 %}
            {% endfor %}
        </div>

        <img class="next" src="{{ asset('uploads/home/arrow-right.png') }}" alt="next">
    </div>
</div>
<div class="row mt-5 mb-5">
    <div class="col-lg-12 text-center">
        <button class="btn btn-primary" id="btn-media">Medias</button>
    </div>
</div>
    {% else %}
        <div class="container jumbotron text-center"><strong>Pas de m√©dias disponible pour ce trick</strong></div>

{% endif %}