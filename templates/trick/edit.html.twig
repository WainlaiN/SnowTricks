{% extends 'base.html.twig' %}

{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}

{% block body %}


    <h1>creation d'un article</h1>

    {{ form_start(formTrick) }}

    {{ form_row(formTrick.name, {'attr': {'placeholder': 'Titre de la figure'}}) }}
    {{ form_row(formTrick.description, {'attr': {'placeholder': 'Description de la figure'}}) }}
    {{ form_row(formTrick.category, {'attr': {'placeholder': 'Categorie de la figure'}}) }}
    {{ form_row(formTrick.createdAt) }}
    {{ form_row(formTrick.image, {'attr': {'placeholder': 'URL Image de la figure' }}) }}
    {{ form_row(formTrick.video, {'attr': {'placeholder': 'URL Video de la figure'}}) }}


    <button type="submit" class="btn btn-primary">
        {% if editMode %}
            Editer l'article
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>
    {{ form_end(formTrick) }}

{% endblock %}


