{% extends 'base.html.twig' %}

{% form_theme formTrick 'bootstrap_4_layout.html.twig' %}

{% block body %}


    <h1>
        {% if editMode %}
        Editer l'article
        {% else %}
        Ajouter un article
        {% endif %}
    </h1>

    {{ form_start(formTrick) }}

    {{ form_row(formTrick.name, {'attr': {'placeholder': 'Titre de la figure'}}) }}
    {{ form_row(formTrick.category) }}
    {{ form_row(formTrick.description, {'attr': {'placeholder': 'Description de la figure'}}) }}
    {{ form_row(formTrick.images, {'attr': {'placeholder': 'images de la figure'}}) }}
    {{ form_row(formTrick.videos, {'attr': {'placeholder': 'videos de la figure'}}) }}


    <button type="submit" class="btn btn-primary">
        {% if editMode %}
            Editer l'article
        {% else %}
            Ajouter l'article
        {% endif %}
    </button>

    {{ form_end(formTrick) }}

{% endblock %}


