<!-- new comment -->
<div class="new_comment">

    <!-- build comment -->
    <ul class="user_comment">
        <div class="row">
            <!-- current #{user} avatar -->
            <div class="user_avatar">
                <img src="{{ UploadPicture ~ comment.user.photo }}">
            </div><!-- the comment body -->
            <div class="comment_body">
                <p><small>{{ comment.content | raw }}</small></p>
            </div>
        </div>

        <!-- comments toolbar -->

            <div class="comment_toolbar">

                <!-- inc. date and time -->
                <div class="comment_details">
                    <ul>
                        <li><i class="fa fa-calendar"></i>{{ comment.createdAt | date('d/m/Y') }}</li>
                        <li><i class="fa fa-pencil-alt"></i><span class="user">{{ comment.user.username }}</span></li>
                    </ul>
                </div>
            </div>

    </ul>
</div>




