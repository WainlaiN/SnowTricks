<!-- display trick comments -->
<div class="comment_block">
    <div class="mb-5">
        <h1>{{ trick.comments | length }} Commentaires</h1>
    </div>
    <!-- display form add comments -->
    <div class="container">
        {% if app.user %}
        {# {{ include('trick/_formComment.html.twig') }} #}
        {% else %}
        <div class="col-sm-10 col-md-8 mx-auto mb-3">
            <h3>Veuillez vous connecter pour laisser un commentaire</h3>
        </div>
    </div>

    {% endif %}

    <div class="container">
        <div class="row">
            <div class="tab-pane active col-sm-11" id="comments-logout">
            <div class="tab-pane active col-sm-11" id="comments-logout">
                <ul class="media-list">
                    {# enable user to add comment is connected #}
                    {% if app.user %}
                        <li class=" media moreComment" style="display: none;">
                            <img class="media-object rounded-circle"
                                 src="{{ asset('/uploads/pictures/') ~ app.user.photo }}" alt="profile">
                            <div class="media-body col-sm-12">
                                <div class="well well-lg">
                                    <h4 class="media-heading reviews">{{ app.user.username }}

                                        <small>{{ form_start(formComment) }}
                                            {{ form_end(formComment) }}
                                            <div class="col-sm-2">
                                                <button class="submit btn btn-primary">Valider</button>
                                            </div>{# le {{ comment.createdAt | date('d') }}.
                                        {{ comment.createdAt | date('m') }}.
                                        {{ comment.createdAt | date('Y') }} #}</small></h4>

                                    <p class="media-comment">
                                        <small>{# {{ comment.content | raw }} #}</small>
                                    </p>
                                </div>
                            </div>

                        </li>
                    {% endif %}

                    {# display comments #}
                    {% for comment in trick.comments %}
                        <li class=" media moreBox" style="display: none;">
                            <img class="media-object rounded-circle"
                                 src="{{ asset('/uploads/pictures/') ~ comment.user.photo }}" alt="profile">

                            <div class="media-body col-sm-12">
                                <div class="well well-lg">
                                    <h4 class="media-heading reviews">{{ comment.user.username }}

                                        <small> le {{ comment.createdAt | date('d') }}.
                                            {{ comment.createdAt | date('m') }}.
                                            {{ comment.createdAt | date('Y') }}</small></h4>

                                    <p class="media-comment">
                                        <small>{{ comment.content | raw }}</small>
                                    </p>
                                </div>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <!-- load more comments -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <button id="loadMore" class="btn btn-primary">Voir plus de commentaires</button>
        </div>
    </div>
</div>










