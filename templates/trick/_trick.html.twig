
<div class="card">
    <img class="card-img-top" src="{{ UploadDirectory ~ trick.mainImage }}" alt="Card image cap"
         style="max-height: 150px">
    <div class="card-body">
        <h6 class="card-title">{{ trick.name | slice(0, 20) }}
            {% if app.user %}
                <div class="float-right">
                    <a href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i
                                class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('trick_delete', {'slug': trick.slug}) }}"
                       onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{ trick.name }} ?`)"><i
                                class="fas fa-trash"></i></a>
                </div>
            {% endif %}
        </h6>
        <h4 class="card-subtitle mb-2 text-muted">
            {{ trick.createdAt | date('d/m/Y') }}
        </h4>
        <p class="card-text">
            {{ trick.description | striptags  | slice(0, 50) ~ '...' }}
        </p>
        <span><a href="{{ path('trick_show', {'slug': trick.slug}) }}" class="btn btn-primary" id="btn-suite">Lire la
                    suite</a></span>
    </div>
</div>

