<div class="card moreBox" style="display: none;">

    <div class="card-body d-flex flex-row">
        <img src="{{ UploadPicture ~ trick.userId.photo }}" class="rounded-circle mr-3" height="50px" width="50px"
             alt="avatar">
        <div>
            <h5 class="card-title font-weight-bold mb-2">{{ trick.name | slice(0, 20) }}</h5>
            <p class="card-text"><i class="far fa-clock pr-2"></i>{{ trick.createdAt | date('d/m/Y') }}</p>
        </div>

            {% if app.user %}
                <div class="float">
                    <a href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i
                                class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('trick_delete', {'slug': trick.slug}) }}"
                       onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{ trick.name }} ?`)"><i
                                class="fas fa-trash"></i></a>
                </div>
            {% endif %}

    </div>

    <div class="view overlay">
        <img class="card-img-top rounded-0" src="{{ UploadDirectory ~ trick.mainImage }}" alt="Card image cap">
        <a href="#!">
            <div class="mask rgba-white-slight"></div>
        </a>
    </div>

    <div class="card-body">
        <div class="collapse-content">
            <p><small class="text-muted">{{ trick.description | slice(0, 50) ~ '...' }}</small></p>
            <a class="btn btn-flat red-text p-1 my-1 mr-0 mml-1 collapsed"
               href="{{ path('trick_show', {'slug': trick.slug}) }}">Lire plus</a>
        </div>
    </div>
</div>

