<div class="col-3">
    <div class="card mb-4">

        <img class="card-img-top" src="{{ UploadDirectory ~ trick.mainImage }}" alt="Card image cap" style="height: 50%">
        <div class="card-body">
            <h6 class="card-title">{{ trick.name | slice(0, 20) }}
                {% if app.user %}
                <a href="{{ path('trick_edit', {'id': trick.id}) }}"><i class="fa fa-pencil float-right">edit</i></a>
                <a href="{{ path('trick_delete', {'id': trick.id}) }}"
                   onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{ trick.name }} ?`)"><i
                            class="fa fa-trash float-right">delete</i></a>
                {% endif %}
            </h6>
            <h4 class="card-subtitle mb-2 text-muted">
                {{ trick.createdAt | date('d/m/Y') }}
            </h4>
            <p class="card-text">
                {{ trick.description | striptags  | slice(0, 50) ~ '...' }}
                <a href="{{ path('trick_show', {'id': trick.id}) }}" class="btn btn-primary">Lire la
                    suite</a>

            </p>
        </div>
    </div>
</div>